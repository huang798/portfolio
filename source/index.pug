		script.
			//點擊後滑動到特定頁面
			$(document).on('click', 'a',function(event){
			//取消原本預定的動作
			event.preventDefault();
			//抓取被點擊的按鈕所連的連結
			var target = $(this).attr("href");
			//抓取連結所連到的地方與上方的距離，在5000毫秒內動畫滑至下方
			$('html, body').animate({
				scrollTop: $(target).offset().top},300);
			});

